<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Vote Movie</title>
    <style>
        body, td {
            font-family: Calibri, Verdana, Tahoma;
        }
        .container {
            width: 400px;
            margin: auto;
            margin-top: 100px;
        }
        h1 {
            text-align: center;
        }
        table {
            border-collapse: collapse;
            width: 100%;
        }
        td, th {
            padding: 3px;
            border: 1px solid #ddd;
        }
        .footer {
            font-size: smaller;
            margin-top: 50px;
            text-align: center;
        }
    </style>
</head>
<body>
   
    <div class="container">
        <h1>Vote Movie</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Votes</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tblbody">
                @foreach (var movie in VoteMovie.Repository.Movies.OrderByDescending(x => x.VoteCount))
                {
                    <tr data-id="@movie.Id">
                        <td>@movie.Name</td>
                        <td class="voteCount">@movie.VoteCount</td>
                        <td><button class="voteButton">Vote</button></td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="footer">
            Source code at <a href="https://github.com/ikhwanhayat/SignalRVoteMovie">https://github.com/ikhwanhayat/SignalRVoteMovie</a>
        </div>
    </div>
    <!--Script references. -->
    <script src="Scripts/jquery-2.1.1.min.js"></script>
    <script src="Scripts/jquery.signalR-2.1.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="signalr/hubs"></script>
    
    <!--Add script to vote and updae positions. -->
    <script type="text/javascript">
        $(function () {
            // Declare a proxy to reference the hub.
            var vote = $.connection.voteHub;

            // Create a function that the hub can call to broadcast messages.
            vote.client.broadcastMessage = function (positions) {
                positions.forEach(function (x) {
                    var tr = $("tr[data-id=" + x.Id + "]");
                    var tbody = tr.parent();
                    tr.find(".voteCount").text(x.VoteCount);
                    tbody.append(tr);
                });
            };

            $.connection.hub.start().done(function () {
                $('.voteButton').click(function () {
                    // Call the Send method on the hub.
                    vote.server.vote($(this).closest("tr").data("id"));
                });
            });
        });
    </script>

</body>
</html>
